---
import { PROJECT_APIS } from '../lib/projects'
import Github from '../components/img/Github.astro'
import Web from '../components/img/Web.astro'
---

<section>
  {
    PROJECT_APIS.map((project) => {
      const { img, name, description, github, webUrl } = project
      return (
        <article class="project">
          <img src={img} alt={name} />
          <h2>
            <a href={webUrl}>{name}</a>
          </h2>
          <p>{description}</p>
          <div class="links">
            <a href={github} target="_blank">
              <Github class="Icon" />
              GitHub
            </a>
            <a href={webUrl} target="_blank">
              <Web class="Icon" />
              Web
            </a>
          </div>
        </article>
      )
    })
  }
</section>

<style>
  section {
    display: grid;
    grid-template-columns: repeat(3, minmax(200px, 1fr));
    max-width: 1000px;
    gap: 15px;
  }
  .project {
    background: radial-gradient(circle at left, #ffffff, #898282);
    background-size: 100% 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 10px;
    overflow: hidden;
  }
  .project img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  .links {
    display: flex;
    justify-content: center;
    padding: 15px 0;
    gap: 15px;
  }
  .project h2 {
    margin: 0;
    font-size: 20px;
    color: #ffffff;
    margin: 15px 0;
    text-shadow: 1px 1px 2px #000000;
    transition: color 0.2s ease-in-out;
  }
  .project h2:hover {
    color: #000000;
    text-shadow: 1px 1px 2px #ffffff;
  }

  .project h2 a {
    color: #ffffff;
    text-decoration: none;
  }
  .project p {
    margin: 0;
    font-size: 15px;
    padding: 0 10px;
    text-wrap: balance;
    text-align: center;
    color: #000000;
  }

  .links a {
    display: flex;
    align-items: center;
    gap: 5px;
    padding: 5px 10px;
    border-radius: 5px;
    background-color: #a29dab59;
    color: #000000;
    text-decoration: none;
    font-weight: bold;
    font-size: 13px;
    border: #000000 solid 1px;
    transition: all 0.2s ease-in-out;
  }

  .links a:hover {
    background-color: #000000;
    color: #ffffff;
    scale: 1.1;
  }

  .Icon {
    width: 17px;
  }
</style>
